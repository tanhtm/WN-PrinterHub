# WN-PrinterHub Environment Configuration
# Copy this file to .env and update the values

# API Security Token - CHANGE THIS!
WN_API_TOKEN=YOUR_SECURE_TOKEN_HERE_CHANGE_ME

# Authentication Control
# Set to "false" to disable authentication (ONLY for secure development environments)
# Set to "true" for production (recommended)
USE_AUTH=false

# CORS Configuration - Allowed origins (comma-separated)
# For development, you can use "*" but it's not recommended for production
WN_ALLOWED_ORIGINS=https://app.whiteneuron.com,https://another-app.whiteneuron.com

# Printer Configuration
# Default port for JetDirect/RAW printing (usually 9100)
WN_PRINTER_DEFAULT_PORT=9100

# Server Configuration
WN_HOST=0.0.0.0
WN_PORT=8088

# Logging Configuration
WN_LOG_LEVEL=INFO